                DrawText("Ranking",420,350,35,WHITE);
                
                if(IsMouseButtonDown(MOUSE_LEFT_BUTTON))
                {
                    while(1)
                    {
                        BeginDrawing();
                            ClearBackground(RAYWHITE);
                            DrawRectangle(0, 0, screenWidth, screenHeight, RAYWHITE);
                        EndDrawing();
                        
                        if(IsKeyPressed(KEY_END))
                        {
                            return 0;
                        }
                            
                    }
                }
            }
