#include "raylib.h"

typedef struct personagem
{
    Image imagem; 
    Vector2 pos;//posição(x,y)
    Rectangle hitbox;
    float veloci;
    Texture2D textura;
}personagem;

typedef struct coisas
{
    Image visual; 
    Vector2 pos; //posição(x,y)
    Rectangle hitbox;
    Texture2D textura;
}coisas;

typedef struct jogador
{
    char nome[20];
    int points;
    int vidas;
    
}jogador;
/*
