                DrawText("Ranking",430,350,30,WHITE);
            }
            
        
        EndDrawing();
    }
    
    //descarregar imagens e texturas
    UnloadTexture(menuTexture);
    UnloadTexture(perso[0].textura);
    UnloadTexture(cen1tx);
    UnloadTexture(partytx);
    UnloadTexture(gameovertx);
